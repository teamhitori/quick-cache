<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>TeamHitori.QuickCache</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

	<PropertyGroup>
		<PackageId>TeamHitori.QuickCache</PackageId>
		<Version>1.0.1.0</Version>
		<Authors>ReubenH</Authors>
		<Company>Team Hitori</Company>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<AssemblyName>TeamHitori.QuickCache</AssemblyName>
		<RepositoryUrl>https://github.com/teamhitori/quick-cache</RepositoryUrl>
		<Description>Quick Cache - The blazing-fast 🚀, thread-safe in-memory cache for .NET applications.</Description>
	</PropertyGroup>

	<ItemGroup>
	  <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="8.0.0" />
	  <PackageReference Include="System.Reactive" Version="6.0.0" />
	</ItemGroup>
</Project>
